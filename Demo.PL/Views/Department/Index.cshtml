@using Demo.DAL.Entities
@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<a asp-action="Create" class="btn btn-outline-success mt-3">Create New Department</a>
@if (Model.Count() > 0)
{
    <h1 class="mt-5">All Departments</h1>
    <table class="table table-striped table-hover">
        <thead>

            <tr>
                <td>@Html.DisplayNameFor(d => d.Code)</td>
                <td>@Html.DisplayNameFor(d => d.Name)</td>
                <td>@Html.DisplayNameFor(d => d.CreatedAt)</td>

                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>

        </thead>


        <tbody>
            @foreach (var department in Model)
            {

                <tr>
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.CreatedAt</td>

                    <td><a asp-action="Details" asp-route-id="@department.Id"><i class="fas fa-eye text-black"></i></a></td>
                    <td><a asp-action="Edit" asp-route-id="@department.Id"><i class="fas fa-edit text-black"></i></a></td>
                    <td><a asp-action="Delete" asp-route-id="@department.Id"><i class="fas fa-trash text-danger"></i></a></td>
                </tr>


            }

        </tbody>

    </table>


}
else
{
    <div class="mt-5 alert alert-danger ">
        <h1>No Departments</h1>
    </div>
}