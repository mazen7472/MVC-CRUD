
@model IEnumerable<EmployeeVM>
@{
    ViewData["Title"] = "Index";
}

<a asp-action="Create" class="btn btn-outline-success mt-3">Create New Employee</a>
@if (Model.Count() > 0)
{
    <h1 class="mt-5">All Employees</h1>
    <br />
<div class="mb-5">
        <form class="row  " asp-action="Index">
            <div class="col-10">
                <input class="form-control" type="text" placeholder="Employees Name" name="SearchValue" />
            </div>
            <div class="col-2 w-auto ms-auto ">
                <div >
                    <input class="btn btn-success   " value="Search" type="submit" />
                </div>
            </div>
        </form>
</div>

    <table class="table table-striped table-hover">
        <thead>

            <tr>
                <td>@Html.DisplayNameFor(d => d.Image)</td>

                <td>@Html.DisplayNameFor(d => d.Name)</td>
                <td>@Html.DisplayNameFor(d => d.Age)</td>
                <td>@Html.DisplayNameFor(d => d.Salary)</td>
                <td>@Html.DisplayNameFor(d => d.Department)</td>
                <td>@Html.DisplayNameFor(d => d.Address)</td>
                <td>@Html.DisplayNameFor(d => d.Email)</td>
                <td>@Html.DisplayNameFor(d => d.Phone)</td>
                <td>@Html.DisplayNameFor(d => d.IsActive)</td>



                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>

        </thead>


        <tbody  >
            @foreach (var employee in Model)
            {

                <tr  >
                    <td ><img src="~/Files/Images/@employee.ImageName" class=" rounded-circle " style="width:6rem;height:6rem " /> </td>
                    <td valign="middle"> @employee.Name</td>
                    <td valign="middle"> @employee.Age</td>
                    <td valign="middle"> @Html.DisplayFor(e => employee.Salary)</td>
                    <td valign="middle"> @employee.Department?.Name</td>
                    <td valign="middle"> @employee.Address</td>
                    <td valign="middle"> @Html.DisplayFor(e => employee.Email)</td>
                    <td valign="middle"> @employee.Phone</td>
                    <td valign="middle">
                        @if (employee.IsActive)
                        {
                           <i class="fas fa-check"></i> 
                        }else
                        {
                            <i class="fas fa-xmark"></i>
                        } </td>

                    <td valign="middle"><a asp-action="Details" asp-route-id="@employee.Id"><i class="fas fa-eye text-black"></i></a></td>
                    <td valign="middle"><a asp-action="Edit" asp-route-id="@employee.Id"><i class="fas fa-edit text-black"></i></a></td>
                    <td valign="middle"><a asp-action="Delete" asp-route-id="@employee.Id"><i class="fas fa-trash text-danger"></i></a></td>
                </tr>


            }

        </tbody>

    </table>


}
else
{
    <div class="mt-5 alert alert-danger ">
        <h1>No employees</h1>
    </div>
}