@model IEnumerable<RoleVM>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<a asp-action="Create" class="btn btn-outline-success mt-3">Create New Role</a>
@if (Model.Count() > 0)
{
    <h1 class="mt-5">All Roles</h1>
    <br />
    <div class="mb-5">
        <form class="row  " asp-action="Index">
            <div class="col-10">
                <input class="form-control" type="text" placeholder=" Name" name="name" />
            </div>
            <div class="col-2 w-auto ms-auto ">
                <div>
                    <input class="btn btn-success   " value="Search" type="submit" />
                </div>
            </div>
        </form>
    </div>

    <table class="table table-striped table-hover">
        <thead>

            <tr>
                <td>@Html.DisplayNameFor(d => d.Id)</td>

                <td>@Html.DisplayNameFor(d => d.Name)</td>
        


                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>

        </thead>


        <tbody>
            @foreach (var user in Model)
            {

                <tr>

                    <td valign="middle"> @user.Id</td>
                    <td valign="middle"> @user.Name</td>





                    <td valign="middle"><a asp-action="Details" asp-route-id="@user.Id.ToString()"><i class="fas fa-eye text-black"></i></a></td>
                    <td valign="middle"><a asp-action="Edit" asp-route-id="@user.Id.ToString()"><i class="fas fa-edit text-black"></i></a></td>
                    <td valign="middle"><a asp-action="Delete" asp-route-id="@user.Id.ToString()"><i class="fas fa-trash text-danger"></i></a></td>
                </tr>


            }


        </tbody>

    </table>
    }
else
{
    <div class="mt-5 alert alert-danger ">
        <h1>No Roles</h1>
    </div>
}
















